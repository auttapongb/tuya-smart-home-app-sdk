<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- Date -->
        <TextView
            android:id="@+id/tvBlogDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="December 22, 2025"
            android:textSize="12sp"
            android:textColor="@color/pando_yellow_dark"
            android:textStyle="bold" />
        
        <!-- Title -->
        <TextView
            android:id="@+id/tvBlogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Blog Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        
        <!-- Description -->
        <TextView
            android:id="@+id/tvBlogDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Blog description goes here..."
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:maxLines="3"
            android:ellipsize="end" />
        
        <!-- Read more indicator -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Read more â†’"
            android:textSize="14sp"
            android:textColor="@color/pando_yellow_dark"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
