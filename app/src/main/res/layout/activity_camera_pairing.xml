<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FF9800"
            android:padding="16dp">
            
            <TextView
                android:id="@+id/tvPairingMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“· QR Code Pairing"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>
        
        <!-- Instructions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:elevation="2dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow these steps:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            
            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Power on your camera\n2. Wait for LED to blink\n3. Enter WiFi details\n4. Start pairing"
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingMultiplier="1.3"/>
        </LinearLayout>
        
        <!-- WiFi Input Section -->
        <LinearLayout
            android:id="@+id/layoutWiFiInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WiFi Settings"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>
            
            <!-- WiFi SSID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WiFi Network Name (SSID)"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                
                <EditText
                    android:id="@+id/etSSID"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Enter WiFi name"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:textSize="14sp"/>
                
                <Button
                    android:id="@+id/btnSelectWiFi"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="ðŸ“¶ Select"
                    android:textSize="12sp"
                    android:background="#2196F3"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            
            <!-- WiFi Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WiFi Password"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>
            
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter WiFi password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:textSize="14sp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Tip: Make sure your phone is connected to the same WiFi network"
                android:textSize="12sp"
                android:textColor="#FF9800"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:background="#FFF9E6"/>
        </LinearLayout>
        
        <!-- QR Code Section (for QR mode only) -->
        <LinearLayout
            android:id="@+id/layoutQRCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:visibility="visible">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR Code"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>
            
            <ImageView
                android:id="@+id/ivQRCode"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="#F5F5F5"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:contentDescription="QR Code"/>
            
            <Button
                android:id="@+id/btnScanQR"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ“· GENERATE QR CODE"
                android:textSize="16sp"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
        
        <!-- Progress and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">
            
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready to pair"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>
        </LinearLayout>
        
        <!-- Start Pairing Button -->
        <Button
            android:id="@+id/btnStartPairing"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="START PAIRING"
            android:textSize="18sp"
            android:background="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_margin="16dp"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>
