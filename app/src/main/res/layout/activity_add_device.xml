<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Pairing Mode"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/tuya_blue"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose the pairing mode for your device"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/ez_mode_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="EZ Mode\n(Recommended)"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/ap_mode_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="AP Mode\n(Alternative)"
        android:textSize="16sp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EZ Mode: Quick and easy pairing\nAP Mode: Use if EZ mode fails"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="32dp" />

</LinearLayout>
