<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/pando_logo"
                android:contentDescription="PANDO Logo" />

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANDO"
                android:textSize="32sp"
                android:textColor="@color/pando_orange"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to PANDO Smart Home"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tv_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Features"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/btn_get_started"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Get Started"
                android:textColor="@color/white"
                android:backgroundTint="@color/pando_orange"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnShopProducts"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="Shop PANDO Products"
                android:textColor="@color/white"
                android:backgroundTint="@color/pando_green"
                android:textSize="16sp"
                android:textStyle="bold" />
                
            <Button
                android:id="@+id/btn_show_debug"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:text="Show Debug Logs"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray_dark"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
    
    <!-- Debug Log Viewer (Initially Hidden) -->
    <include
        android:id="@+id/debug_log_container"
        layout="@layout/debug_log_viewer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="bottom"
        android:visibility="gone" />

</FrameLayout>
