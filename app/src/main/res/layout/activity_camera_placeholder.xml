<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <!-- Camera Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_menu_camera"
        android:tint="#666666"
        android:layout_marginBottom="32dp" />

    <!-- Device Name -->
    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANDO Camera"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <!-- Status Card -->
    <androidx.cardview.cardview.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera SDK Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Initializing..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </androidx.cardview.cardview.CardView>

    <!-- Info Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ Full camera features require Tuya IPC Camera SDK"
        android:textSize="14sp"
        android:textColor="#FF9800"
        android:textAlignment="center"
        android:padding="16dp"
        android:background="#FFF3E0"
        android:layout_marginBottom="24dp" />

    <!-- View Integration Guide Button -->
    <Button
        android:id="@+id/btn_view_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Integration Guide"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Devices"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#757575"
        android:textColor="#FFFFFF" />

    <!-- Feature List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coming Soon:\n• Live Video Streaming\n• PTZ Controls\n• Two-Way Audio\n• Video Recording\n• Motion Detection\n• Cloud Storage"
        android:textSize="12sp"
        android:textColor="#999999"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="4dp" />

</LinearLayout>
